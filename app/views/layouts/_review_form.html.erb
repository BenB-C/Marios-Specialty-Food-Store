<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :rating %>
  <%= f.number_field :rating, step: 1, min: 1, max: 5 %><br>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %><br>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit %>
<% end %>
<%= button_to("Cancel", product_path(@product), method: :get) %>
